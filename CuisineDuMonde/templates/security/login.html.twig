{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <!-- Error management -->
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <!-- Error management -->

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Sign In</h5>
                        <img class="mx-auto" style="width: 400px;" src="{{ asset('images/general/login_logo.jpg') }}">

                        <!-- form start -->
                        <form class="form-signin" method="post">

                            <div class="form-label-group">
                                <label for="inputEmail">Email</label>
                                <input type="email" value="{{ last_username }}" placeholder="Email address" name="email" id="inputEmail" class="form-control" required autofocus>
                            </div>

                            <div class="form-label-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" placeholder="Password..." name="password" id="inputPassword" class="form-control" required>
                            </div>

                            <br>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">
                                Sign in
                            </button>

                             </form>
                        <!-- form end -->

                        <br>

                        <div class="mx-auto" style="width: 400px;">
                            <a class="text-muted" href="{{ path('app_register') }}">Sign up?</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
